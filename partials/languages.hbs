{{#if resume.languages.length}}
<section id="languages">
	<h2>Languages</h2>
	{{#each resume.languages}}
	<div class="item">
		{{#if language}}
		<div class="language">
			{{language}}
		</div>
		{{/if}}
		{{#if fluency}}
		<div class="fluency">
			<small>{{fluency}}</small>
		</div>
		{{/if}}
	</div>
	{{/each}}
</section>
{{/if}}